<config>
    
    <property name="a" value="alpha"/>
    
    <property name="b" value="beta"/>
    
    <property name="c" value="charlie"/>
    
    <property name="a-prime" value="${a}"/>
    
    <property name="adprime" value="${a-prime}"/>
    
    <property name="foo" value="${a}/bar"/>
    
    <property name="home" value="${user.home}/Projects/LabsUtil"/>
    
    <property name="apath" value="/tmp/${a}"/>

    <component name="unknown" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${d}"/>
        <property name="two" value="${e}"/>
        <property name="three" value="${f}"/>
    </component>

    <component name="badlyformed" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${a${b}}"/>
        <property name="two" value="${b$}"/>
        <property name="three" value="${a c}"/>
    </component>
    
    <component name="simple" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${a}"/>
        <property name="two" value="${b}"/>
        <property name="three" value="${c}"/>
    </component>

    <component name="compound" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${a}/${b}"/>
        <property name="two" value="${b}${c}"/>
        <property name="three" value="${c}:${a}"/>
    </component>

    <component name="nonglobal" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${a"/>
        <property name="two" value="$b}"/>
        <property name="three" value="$c"/>
    </component>
    
    <component name="recurse" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${a}"/>
        <property name="two" value="${a-prime}"/>
        <property name="three" value="${adprime}"/>
    </component>
        
    <component name="recurse2" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${foo}"/>
        <property name="two" value="x"/>
        <property name="three" value="y"/>
    </component>
        
    <component name="recurse3" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${apath}"/>
        <property name="two" value="${apath}/bpath"/>
        <property name="three" value="y"/>
    </component>
        
    <component name="compoundrecurse" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="one ${b}/${a-prime}"/>
        <property name="two" value="two ${c}/${a-prime}/${b}/${adprime}"/>
        <property name="three" value="three ${adprime}/${b}/${c}"/>
    </component>
    
    <component name="sysprops" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${home}/jini/jsk-all.policy"/>
        <property name="two" value="two"/>
        <property name="three" value="three"/>
    </component>
    
    <component name="distinguished" type="com.oracle.labs.mlrg.olcut.config.StringConfigurable">
        <property name="one" value="${gp.hostName}"/>
        <property name="two" value="${user.name}"/>
        <property name="three" value="three"/>
    </component>
    
    <component name="listTest" type="com.oracle.labs.mlrg.olcut.config.StringListConfigurable">
        <propertylist name="strings">
            <item>${a}</item>
            <item>${b}</item>
            <item>${a}/${b}</item>
            <item>intro/${b}</item>
            <item>${a}/extro</item>
        </propertylist>
    </component>

</config>